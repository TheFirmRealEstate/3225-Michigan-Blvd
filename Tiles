  <script>
    // Single-open accordion behavior with ARIA updates
    (function(){
      const acc = document.getElementById('tiles-accordion');
      const items = Array.from(acc.querySelectorAll('.item'));

      function closeAll(except){
        items.forEach(item => {
          if(item === except) return;
          const btn = item.querySelector('.trigger');
          const panel = item.querySelector('.panel');
          item.setAttribute('aria-expanded','false');
          btn.setAttribute('aria-expanded','false');
          panel.style.maxHeight = 0;
        });
      }

      items.forEach((item, idx) => {
        const btn = item.querySelector('.trigger');
        const panel = item.querySelector('.panel');
        btn.id = 't' + (idx+1);
        btn.addEventListener('click', () => {
          const isOpen = item.getAttribute('aria-expanded') === 'true';
          if(isOpen){
            item.setAttribute('aria-expanded','false');
            btn.setAttribute('aria-expanded','false');
            panel.style.maxHeight = 0;
          } else {
            closeAll(item);
            item.setAttribute('aria-expanded','true');
            btn.setAttribute('aria-expanded','true');
            panel.style.maxHeight = panel.scrollHeight + 'px';
          }
        });
        // Allow keyboard open via Enter/Space automatically as it's a button
      });

      // Optionally open the first item by default
      if(items[0]){
        const btn = items[0].querySelector('.trigger');
        btn.click();
      }
    })();
  </script>
